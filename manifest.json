{
    "manifest_version": 3,
    "name": "Summary Viewer",
    "version": "1.0",
    "description": "Displays AI-generated summaries from your API",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": [
        "tabs", 
        "activeTab"
    ],
    "host_permissions": ["<all_urls>"]
  }
  